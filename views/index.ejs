<body>
  <div class='main_container'>
    <img src="images/logo.png" alt="7-talk_logo.png" style='margin-top:30%;' id='logo'>
    <form class='login_form' id='login_form' onSubmit="login(); return false;" autocomplete="off">
      <input type="text" id='id' class='textfield' placeholder="아이디" required>
      <input type="password" id='passwd' class='textfield' placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;" required>
      <div class="button_group">
          <input type='button' value='간편 회원가입' onclick="goSignUp();">
          <input type='submit' form="login_form" value='로그인'>
      </div>
    </form>
  </div>
  <script src="javascripts/common.js"></script>
</body>

</html>